<project name = "unix-tools" default = "createZip">
    <target name = "clean">
        <delete dir = "classes"/>
    </target>

    <target name = "compile">
        <mkdir dir = "classes"/>
        <javac srcdir = "src" destdir = "classes" includeAntRuntime = "false"/>
    </target>

    <target name = "createFolderStructure">
        <mkdir dir = "unix-tools"/>
        <mkdir dir = "unix-tools/lib"/>
        <mkdir dir = "unix-tools/bin"/>
        <mkdir dir = "unix-tools/docs"/>
        <copy todir = "unix-tools/bin">
            <fileset dir = "shell-files"/>
        </copy>
        <copy file = "README.md" tofile = "unix-tools/README.md"/>
    </target>

    <target name = "createJar" depends = "compile,createFolderStructure">
        <jar destfile = "unix-tools/lib/unix-tools.jar" basedir = "classes"/>
    </target>

    <target name = "generateDocs">
        <javadoc packagenames = "shwetado.unixtools.*"
                 sourcepath = "src"
                 destdir = "unix-tools/docs"
                 author  = "true" version = "true"/>
    </target>

    <target name = "createZip" depends = "createJar,compile,createFolderStructure,generateDocs">
        <zip destfile = "unix-tools.zip" basedir = "unix-tools" update = "true"/>
        <delete dir = "unix-tools"/>
    </target>

    <path id="classpath">
        <fileset dir="dependencies" includes="*.jar"/>
    </path>

    <target name= "compileTests" depends="compile">
        <javac srcdir = "test" destdir= "classes" classpathref = "classpath" includeAntRuntime = "false"/>
    </target>

    <target name = "runTests" depends = "compileTests">
        <java classname = "junit.textui.TestRunner">
            <classpath>
                <path refid = "classpath"/>
                <path location = "unix-tools/lib/unix-tools.jar"/>
            </classpath>
        </java>
    </target>
</project>